{%-assign t = site.data.locale[page.lang].translation-%}

{%-assign posts = site.posts | where:"lang", page.lang-%}
{%-for post in posts limit:5-%}

<div class="container-fluid">
  <div class="row">
    <div class="col-md">
      <h4>
				<a href="{{ post.url }}">{{ post.title }}</a>
			</h4>
    </div>
    <div class="col-md text-right">
      <p class="timestamp">
			{% if post.author %}
				<span data-localize="news_by">{{ t.posted_by }}</span>
				{{ post.author }}
			{% endif %}
				<span data-localize="news_at">{{ t.posted_on }}</span>
				<time datetime="{{ post.date | datetime | date_to_xmlschema }}"
				{%-if updated-%}data-updated="true"{%-endif-%}>
				{{ post.date | date: post.date_fmt }}</time>
			</p>
		</div>
	</div>
</div>

<div class="article-content">
	{{ post.content }}
</div>

{%-endfor-%}

<p class="text-center" style="margin-top: 2em;">
	<a class="btn btn-lg btn-default" href="{{ '/news/archive/' | relative_url }}">
		<i class="fa fa-calendar fa-fw"></i>
		<span data-localize="news_archive">{{ t.news_archive }}</span>
	</a>
</p>

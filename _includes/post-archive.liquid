{%-assign t = site.data.locale[page.lang].translation-%}

<table class="table table-striped">
	<caption data-localize="news_archive_content">
		Full historical listing of all news posts, sorted by newest first.</caption>
	<thead>
		<tr>
			<th data-localize="news_post">{{ t.archive_header_post }}</th>
			<th data-localize="news_date">{{ t.archive_header_date }}</th>
			<th data-localize="news_author">{{ t.archive_header_author }}</th>
		</tr>
	</thead>
	<tbody>
{%-assign posts = site.posts | where:"lang", page.lang-%}
{% for post in posts %}
		<tr>
			<td><a href="{{ post.url }}">{{ post.title | escape }}</a></td>
			<td><time datetime="{{ post.date | datetime | date_to_xmlschema }}"
				pubdate{% if updated %}data-updated="true"{% endif %}>
				{{ post.date | date: page.date_fmt }}</time></td>
			<td>{{ post.author }}</td>
		</tr>
{% endfor %}
	</tbody>
</table>

{% assign t  = site.data.locale[page.lang].translation %}

<h1>{{ t.mirrors_title }}</h1>

<table
	id="table-mirrors"
	class="table table-sm table-hover"
	data-toggle="table">
	<thead>
		<tr>
			<th data-field="name" data-sortable="true">{{ t.mirrors_header_name }}</th>
			<th>{{ t.mirrors_header_url }}</th>
		</tr>
	</thead>
	<tbody>
{%-for mirror in site.data.mirrors-%}
		<tr>
			<td>{{ mirror.name }}</td>
			<td>{{ mirror.url }}</td>
		</tr>
{%-endfor-%}
	</tbody>
</table>

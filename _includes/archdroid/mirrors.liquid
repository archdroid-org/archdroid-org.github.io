{% assign t  = site.data.locale[page.lang].translation %}

<table
	id="table-mirrors"
	class="table table-sm table-hover"
	data-toggle="table">
	<thead>
		<tr>
			<th
				data-localize="mirrors_header_name"
				data-field="name"
				data-sortable="true"
			>
				{{ t.mirrors_header_name }}
			</th>
			<th data-localize="mirrors_header_url">{{ t.mirrors_header_url }}</th>
		</tr>
	</thead>
	<tbody>
{%-for mirror in site.data.mirrors-%}
		<tr>
			<td>{{ mirror.name }}</td>
			<td>{{ mirror.url }}</td>
		</tr>
{%-endfor-%}
	</tbody>
</table>
